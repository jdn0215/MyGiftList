<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="a2017iciclo.moviles.unacr.globales.proyecto.mygiftlist.mygiftlist">
    <!--Permisos para usar la cÃ¡mara y almacenamiento -->

    <uses-feature android:name="android.permission.camera2"></uses-feature>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ImagenesVista"
            android:label="@string/title_activity_imagenes_vista"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateGift"
            android:label="@string/title_activity_create_gift"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>