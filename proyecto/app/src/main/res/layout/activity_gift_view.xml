<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_column="1"
            android:layout_marginTop="36dp"
            android:layout_row="0"
            android:text="TextView"
            android:textColor="?attr/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />

    </GridLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/contenido"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:editable="false"
                android:ems="10"
                android:inputType="textMultiLine"
                android:lines="10"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras interdum sed erat nec finibus. In faucibus massa vel libero viverra, nec euismod urna consectetur. Nulla pellentesque gravida nulla a condimentum. Nunc eget quam neque. Morbi feugiat elementum aliquam. Integer venenatis neque ut neque volutpat malesuada. Duis hendrerit dui nisi, id lacinia ex vestibulum nec. Morbi quis libero et magna facilisis finibus sed vel arcu. Donec bibendum eleifend eleifend. Nam at bibendum libero. Nullam arcu dui, dignissim quis lacus et, lobortis hendrerit nunc." />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        map:srcCompat="@mipmap/ic_launcher"
        android:layout_weight="0.77" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        tools:context="com.example.lenovo.clase27deabril6pmgooglemaps.MapsActivity" />
</LinearLayout>
